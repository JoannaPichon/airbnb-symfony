{% extends 'admin/base.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}

{% form_theme form with ['ad/collection.html.twig'] %}	

{% block body %}
<div class="container mt-4">
	

<h1>Modification du mot de passe</h1>

{{ form_start(form) }}

{{ form_row(form.oldPassword,{'label':false,'attr':{'placeholder':"Entrez votre ancien mot de passe"}}) }}
{{ form_row(form.newPassword,{'label':false,'attr':{'placeholder':"Choisissez le nouveau mot de passe"}}) }}
{{ form_row(form.confirmPassword,{'label':false,'attr':{'placeholder':"Confirmez le nouveau mot de passe"}}) }}

<button type="submit" class="btn btn-success">Modifier</button>

{{ form_end(form) }}



</div>

{% endblock %}






