{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block styesheets %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" integrity="sha512-mSYUmp1HYZDFaVKK//63EcZq4iFWFjxSL+Z3T/aCt4IO9Cejm03q3NKKYN6pFQzY0SBOr8h+eCIAZHPXcpZaNw==" crossorigin="anonymous" />
{% endblock %}

{% form_theme form with ['ad/collection.html.twig'] %}

{% block body %}
	<div class="container mt-3">
	
	<h1>Réservation de l'annonce {{ad.title}}</h1>
		{{ form_start(form) }}
        <div class="row">
            <div class="col" id="">{{ form_row(form.startDate, {'label':'Date d\'arrivée', 'attr': {'placeholder': 'Titre de l\'annonce'} }) }}</div>
            <div class="col">{{ form_row(form.endDate, {'label':'Date de départ ', 'attr': {'placeholder': ''} }) }}</div>
        </div>
		<div class="row">
		    {{ form_row(form.comment, {'label':'Commentaire', 'attr': {'placeholder': ''} }) }}
        </div>
        <div class="row">
            <p>7 nuits à {{ad.price}} par nuit<br/>
                Montant du séjour: {{ ad.price }} * 7</p>
        </div>
	
	
		<button type="submit" class="btn btn-success d-block mx-auto mb-5 ">Réserver</button>
		{{ form_end(form) }}
        <a href="{{ path('ad_show', {'slug': ad.slug}) }}" class="btn btn-secondary">Retour</a>
	</div>
{% endblock %}
{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js" integrity="sha512-T/tUfKSV1bihCnd+MxKD0Hm1uBBroVYBOYSk1knyvQ9VyZJpc/ALb4P0r6ubwVPSGB2GvjeoMAJJImBG12TiaQ==" crossorigin="anonymous"></script>
{% endblock %}
